     <script>
         function Cancelorder(orderid) {
           Swal.fire({
             icon: "warning",
             title: "Are you sure?",
             text: "Cancel Order?",
             showCancelButton: true,
             confirmButtonColor: "#3085d6",
             cancelButtonColor: "#d33",
             confirmButtonText: "Ok",
           }).then((result) => {
             if (result.isConfirmed) {
               axios.get(`/admin/deleteorder?id=${orderid}`).then((result) => {
                 Swal.fire("Canceld.!", "Product has been Canceld.", "success").then((response) => {
                   location.reload();
                 })
               })
               
             }
           });
         }




         function Changestatus(selectElement) {
            const orderid = selectElement.dataset.orderid;
  const selectedStatus = selectElement.value;
           Swal.fire({
             icon: "warning",
             title: "Are you sure?",
             text: "Change status?",
             showCancelButton: true,
             confirmButtonColor: "#3085d6",
             cancelButtonColor: "#d33",
             confirmButtonText: "Ok",
           }).then((result) => {
             if (result.isConfirmed) {
               axios.get(`/admin/changesatatus?id=${orderid}&status=${selectedStatus}`).then((result) => {
                 Swal.fire("Changed.!", "Order status Changed.", "success").then((response) => {
                   location.reload();
                 })
               })
               
             }
           });
         }
       </script>
