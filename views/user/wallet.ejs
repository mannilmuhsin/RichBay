  <!-- sweet alert cdn -->
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>


  <script>
    function Cancelorder(orderid, itemid) {
      Swal.fire({
        icon: "warning",
        title: "Are you sure?",
        text: "Cancel Order?",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Ok",
      }).then((result) => {
        if (result.isConfirmed) {
          axios.get(`/cancelorder?orderid=${orderid}`).then((result) => {
            Swal.fire("Canceld.!", "Product has been Canceld.", "success").then((response) => {
              location.reload();
            })
          })

        }
      });
    }


  </script>



