  <style>
    .order-summary {
      max-width: 600px;
      margin: 0 auto;
      padding: 20px;
      border: 1px solid #eaeaea;
      border-radius: 5px;
      background-color: #f8f8f8;
    }

    .order-summary .title {
      font-size: 24px;
      font-weight: bold;
      margin-bottom: 20px;
    }

    .order-summary .item {
      display: flex;
      align-items: center;
      margin-bottom: 10px;
    }

    .order-summary .item img {
      width: 80px;
      height: 80px;
      object-fit: cover;
      margin-right: 10px;
    }

    .order-summary .item-name {
      font-size: 18px;
      font-weight: bold;
      margin-bottom: 5px;
    }

    .order-summary .item-price {
      font-size: 16px;
      color: #888888;
      margin-bottom: 5px;
    }

    .order-summary .total {
      font-size: 20px;
      font-weight: bold;
      margin-top: 20px;
    }

    .order-summary .btn {
      margin-top: 20px;
    }

    .address-card {
      border: 1px solid #ccc;
      border-radius: 4px;
      padding: 10px;
      width: 300px;
      margin-bottom: 10px;
    }

    .address-card label {
      display: block;
      font-weight: bold;
      margin-bottom: 5px;
    }

    .address-card p {
      margin: 0;
      margin-bottom: 5px;
    }
  </style>
</head>

