      const coupenvalue = document.getElementById("couponvalue");
      const thisis = parseInt(cartprice)
      const cvalue = parseInt(coupenvalue.textContent)
      total.textContent = alue + thisis - cvalue
      const shipping = document.getElementById("shipping")
      shipping.textContent = alue
