      // paymentForm.submit();
    });



    //for coupen handling

    const couponForm = document.getElementById('couponForm');
    const applyCouponButton = document.getElementById('applyCouponButton');

    applyCouponButton.addEventListener('click', (e) => {
      e.preventDefault();

      const coupon = document.getElementById('couponName');
      const addressId = document.getElementById('addressId');

      axios({
        method: "post",
        url: "/coupon-apply",
        data: {
          couponName: coupon.value,
          cartPrice: '<%= cart.cartprice %>'
        }
      })
        .then((result) => {
          console.log(result);
          if (result.data.response == false) {
            Swal.fire({
              icon: "warning",
              title: "Invalid coupon",
            })
            const total = document.getElementById("Total");
            document.querySelector('.couponShow').innerHTML = `${0}`;
            document.querySelector('.couponShow').removeAttribute("value");
            document.getElementById('Total').innerHTML = total.textContent
            coupon.value = '';
          } else if (result.data.response == "min") {

            Swal.fire({
              icon: "warning",
              title: "You can't apply this coupon",
            })

          } else {
            const scharg = document.getElementById("shipping");
            const schagvalue = parseInt(scharg.textContent)
            const cartprice = parseInt('<%=cart.cartprice  %>')
            const alltotal = cartprice + schagvalue
            let discount = ((result.data.coupon.discount * alltotal) / 100).toFixed(2);
            if (discount > result.data.coupon.maxAmount) {
              discount = result.data.coupon.maxAmount
            }
            document.querySelector('.couponShow').innerHTML = discount
            document.querySelector('.couponShow').setAttribute("value", result.data.coupon._id);
            document.getElementById('Total').innerHTML = alltotal - discount
          }
        })
    })

