    // Function to handle the Online Payment method
    function handleOnlinePayment() {
      const paymentForm = document.getElementById('payform');
      const formData = new FormData(paymentForm);


      $.ajax({
        url: "/razorpay",
        type: "POST",
        data: formData,
        processData: false, // Set to false to prevent jQuery from processing FormData
        contentType: false,
        success: function (res) {
          if (res.success) {
            var options = {
              "key": "" + res.key_id + "",
              "amount": "" + res.amount + "",
              "currency": "INR",
              "name": "RICH BAY",
              "image": "../image/Screenshot 2023-06-16 112029 (1).png",
              "order_id": "" + res.order_id + "",
              "handler": function (response) {
                // alert("Payment Succeeded");
                const paymentForm = document.getElementById('payform');
                const formData = new FormData(paymentForm);

                $.ajax({
                  url: "/checkout",
                  type: "POST",
                  data:
                    formData,
                  processData: false, // Set to false to prevent jQuery from processing FormData
                  contentType: false,
                  success: function (res) {
                    if (res.success) {
                      const coupen = res.coupen
                      const id = res.orderid
                      window.open("/success?coupen=" + coupen + "&id=" + id, "_self")
                    }
                  }
                })
                // window.open("/","_self")
              },
              "prefill": {
                "name": "" + res.name + "",
                "email": "" + res.email + ""
              },
              "notes": {
                "description": "" + res.description + ""
              },
              "theme": {
                "color": "#2300a3"
              }
            };
            var razorpayObject = new Razorpay(options);
            razorpayObject.on('payment.failed', function (response) {
              alert("Payment Failed");
            });
            razorpayObject.open();
          }
          else {
            alert(res.msg);
          }
        }
      })
    }
    // Use this function to make a GET request or perform any specific actions for the Online Payment method.



    // Add an event listener to the form's submit event
    const paymentForm = document.getElementById('payform');
    const proceedbutton = document.getElementById('proceedbutton');

    proceedbutton.addEventListener('click', (event) => {
      event.preventDefault(); // Prevent the default form submission behavior

      // Retrieve the value of the selected payment method
      const selectedPaymentMethod = document.querySelector('input[name="Paymentmethod"]:checked').value;
      console.log('Selected Payment Method:', selectedPaymentMethod);
