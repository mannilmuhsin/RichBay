    <% if(cart){ %>
    

    <div class="container py-5">
        <h1>Cart</h1>
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                
                <% cart.items.forEach((item,i )=> {   %>
                  
                <td>
                  <div class="product-info d-flex align-items-center">
                    <a href="product-detail-1.html">
                      <img src="<%=item.productimage  %>" alt="Product 1" class="product-image " style="height: 150px;">
                    </a>
                    <div class="product-name ms-3"><%=item.productname  %></div>
                  </div>
                </td>
                <td>₹<%=item.productprice  %></td>
                <td>
                  <div class=" d-flex">
                      <a onclick="Addtocart('<%=item.productid  %>')" class="btn me-3 btn-outline-dark" id="plus">+</a>
                    <div class="box  "><%=item.quantity  %></div>
                      <a onclick="Mainustocart('<%=item.productid  %>')" class="btn me-3 btn-outline-dark"  id="mainus">-</a>
                  </div>
                </td>
                <td>₹ <%=item.totalprice  %></td>
                <td>
                  <!-- <button class="btn btn-danger removeBtn" type="button">Cancel</button> -->
                  <a class="btn btn-outline-dark removeBtn" href="/removeonefromcart?id=<%=item.productid  %>">Cancel</a>
                </td>
              </tr>
              <% }); %>

              
            <tfoot>
              <tr>
                <td colspan="4" class="text-end fw-bold">Total:</td>
                <td>₹ <%=cart.cartprice  %></td>
              </tr>
            </tfoot>
          </table>
        </div>
        <div class="text-end">
          <a class="btn btn-outline-dark" href="/checkout">Checkout</a>
          <!-- <button class="btn btn-primary">Checkout</button> -->
        </div>
      </div>

