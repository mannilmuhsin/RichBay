              <th>Quantity</th>
              <th>Total</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <tr>

              <% cart.items.forEach((item,i )=> { %>

                <td>
                  <div class="product-info d-flex align-items-center">
                    <a href="product-detail-1.html">
                      <img src="<%=item.productimage.url  %>" alt="Product 1" class="product-image "
