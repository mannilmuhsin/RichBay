        <script>
          function Addtocart(id) {
            axios.get(`/addtocart?id=${id}&action=plus`).then((result) => {
              if (result.data.response) {
                location.reload();
              }
            })
          }
          function Mainustocart(id) {
            axios.get(`/addtocart?id=${id}&action=mainus`).then((result) => {
              if (result.data.response) {
                location.reload();
              }
            })

          }


        </script>

<script>
  // Get the form element
  const searchForm = document.getElementById("searchForm");

  // Add a submit event listener to the form
  searchForm.addEventListener("submit", function (event) {
    event.preventDefault(); // Prevent form submission

    // Get the value of the search input
    const searchInput = document.querySelector("input[name='search']").value;

    // Print the value in the console
    window.location.href = "/display-products?searchContent=" + searchInput;
  });
</script>

