                                            <th scope="col">Product image</th>
                                            <th scope="col">Product name</th>
                                            <th scope="col">quantity</th>
                                            <th scope="col">Product price</th>
                                            <th scope="col">Edit</th>
                                            <th scope="col">Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody >
                                        <% product.forEach((product,i)=>{%>
                                        <tr >
                                            <th scope="row"  ><%= i+1  %></th>
                                            <td><img src="<%=product.image[0]  %>" class="card-img-top" alt="..." style="height: auto; width: 50px;"></td>
                                            <td ><%=product.productname  %></td>
                                            <td><%=product.quantity  %></td>
                                            <td><%=product.price  %></td>
                                            <td><a href="/admin/editproduct?id=<%=product._id  %>" style="font-size: .55rem;" class="btn btn-outline-success">Edit</a></td>
                                          <td>
                                                <button class="btn btn-outline-danger" onclick="deleteAddress('<%=product._id  %>')" type="submit"  style="font-size: .55rem;">Delete</button>
                                        </td>
                                        </tr>
        
                                        <% })%>
        
                                       
