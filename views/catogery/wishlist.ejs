    $('.js-addwish-b2').each(function () {
      var nameProduct = $(this).parent().parent().find('.js-name-b2').html();
      var idProduct = $(this).parent().parent().find('.js-id-b2').html();
      var heartIcon1 = $(this).find('.icon-heart1');
      var heartIcon2 = $(this).find('.icon-heart2');
      const user = '<%- JSON.stringify(user) %>';
      const userObject = JSON.parse(user);
      var productExists = userObject.wishlist.includes(idProduct.trim());
      // Set the initial heart icon state based on wishlist status
      updateHeartIcon(productExists);

      $(this).on('click', function (e) {
        e.preventDefault();

        
        axios.get(`/wish-list-handle?prodid=${idProduct.trim()}`).then((result) => {
          if (result.data.response) {

            let z = document.getElementById("wishbar");
            z.className = "show";
            setTimeout(function () {
              z.className = z.className.replace("show", "");
            }, 2000);



            productExists = result.data.user.wishlist.includes(idProduct.trim());
            // Update the heart icon source immediately
            updateHeartIcon(productExists);
            swal(nameProduct, "is added to wishlist !", "success");
          } else {
            let z = document.getElementById("wishbar-error");
            z.className = "show";
            setTimeout(function () {
              z.className = z.className.replace("show", "");
            }, 2000);
            productExists = result.data.user.wishlist.includes(idProduct.trim());
            updateHeartIcon(productExists);
            swal({
              icon: "info",
              title: nameProduct,
              text:"Removed from wishlist !",
             
              buttons: false,
            });
            window.location.reload()
          }
        });
      });

      function updateHeartIcon(isAdded) {
        if (isAdded) {
          heartIcon1.attr('src', 'images/icons/icon-heart-02.png');
          heartIcon2.attr('src', 'images/icons/icon-heart-02.png');
        } else {
          heartIcon1.attr('src', 'images/icons/icon-heart-01.png');
          heartIcon2.attr('src', 'images/icons/icon-heart-02.png');
        }
      }
    });




  </script>
